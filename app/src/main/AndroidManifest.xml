<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rex.condominio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="ANDROID.PERMISSION.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Condominio"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.AdminActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tienda.VentasListasActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tienda.VentaActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PDFActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tienda.ProveedorActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tienda.ProductosActivity"
            android:exported="false" />
        <activity
            android:name=".activities.servicios.FacturasActivity"
            android:exported="false" />
        <activity
            android:name=".activities.servicios.ServicioActivity"
            android:exported="false" />

        <service
            android:name=".services.NotificacionesService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".activities.FamiliaActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PagoMovilActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CrearAnuncioActivity"
            android:exported="false" />
        <activity
            android:name=".activities.register.ActivarUserActivity"
            android:exported="false" />
        <activity
            android:name=".activities.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>